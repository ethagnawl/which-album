!!! 5
%html
  %head
    %meta{ :charset => 'utf-8' }
    %meta{ :name => "viewport", :content => "width=device-width, user-scalable=no" }
    %meta{ :name => "description", :content => "Find out which albums your favorite songs are on!" }
    %meta{ :name => "keywords", :content => "artist search, album search, song search" }
    %link{rel: 'stylesheet', type: 'text/css', media: 'screen', href: 'bootstrap.min.css'}
    %link{rel: 'stylesheet', type: 'text/css', media: 'screen', href: 'bootstrap-responsive.min.css'}
    %link{rel: 'stylesheet', type: 'text/css', media: 'screen', href: 'styles.css'}
    %title
      Which Album? | www.which-album.com
  %body
    .navbar.navbar-static-top.navbar-inverse
      .navbar-inner
        %h1
          %a.brand{ href: '/' }
            Which-Album.com
    .container
      #spinner_wrapper
        #spinner
      %h2
        Which album is that song on?
      %form.form-horizontal
        .control-group
          %label.control-label
            Artist
          .controls
            %input#artist{ name: 'artist', required: true,
              placeholder: @sample[:artist], pattern: '^\S+' }
        .control-group
          %label.control-label Song
          .controls
            %input#song{ name: 'song', required: true,
              placeholder: @sample[:song], pattern: '^\S+' }
        .control-group
          .controls
            %input#submit.btn.btn-success{ type: 'submit', value: 'Search' }
      %table#results.table.table-striped{ style: 'display: none;' }
        %thead
          %tr
            %td
              Results
        %tbody
    :javascript
      window.env = "#{ENV['RACK_ENV'] || 'development'}";
    %script{src: 'http://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js'}
    %script{src: 'spin.js'}
    %script{src: 'which_record.js'}
    - if ENV['RACK_ENV'] == "production"
      :javascript
        window.GA_ID = "#{GA_ID}";
      %script{src: 'ganalytics.js'}

